<!-- SCRIPT -->
<script>
    /* ---------- Chatbot ---------- */
    const messagesEl = document.getElementById("messages");
    const input = document.getElementById("chatInput");
    const sendBtn = document.getElementById("sendBtn");

    function appendMsg(text, who="bot") {
        let div = document.createElement("div");
        div.className = "msg " + (who === "user" ? "user" : "bot");
        div.textContent = text;
        messagesEl.appendChild(div);
        messagesEl.scrollTop = messagesEl.scrollHeight;
    }

    function botReply(text) {
        text = text.toLowerCase();
        if (text.includes("hola")) return "¡Hola! Puedo contarte sobre IA, redes neuronales o modelos GPT.";
        if (text.includes("qué es la ia") || text.includes("que es la ia"))
            return "La IA es la ciencia que permite a las máquinas aprender y tomar decisiones.";
        if (text.includes("gpt"))
            return "Los modelos GPT generan texto, imágenes y pueden conversar como humanos.";
        if (text.includes("adiós"))
            return "¡Hasta luego! Fue un gusto ayudarte.";
        return "No tengo esa respuesta aún, pero sigo aprendiendo. Pregunta por GPT, redes neuronales o ‘qué es la IA’.";
    }

    sendBtn.onclick = () => {
        let text = input.value.trim();
        if (!text) return;
        appendMsg(text, "user");
        input.value = "";
        setTimeout(() => appendMsg(botReply(text), "bot"), 500);
    };

    input.addEventListener("keydown", e => {
        if (e.key === "Enter") {
            e.preventDefault();
            sendBtn.click();
        }
    });

    appendMsg("Hola, soy tu asistente sobre Inteligencia Artificial. ¿Qué quieres saber?");

    /* ---------- Cuestionario ---------- */
    const STORAGE_KEY = "ia_form_data";

    const form = document.getElementById("quizForm");
    const savedInfo = document.getElementById("savedInfo");

    function loadSaved() {
        const raw = localStorage.getItem(STORAGE_KEY);
        if (!raw) {
            savedInfo.textContent = "No hay respuestas guardadas";
            return;
        }
        const data = JSON.parse(raw);
        savedInfo.textContent = "Último guardado: " + new Date(data.date).toLocaleString();
    }

    form.onsubmit = e => {
        e.preventDefault();
        const data = {
            nombre: nombre.value,
            email: email.value,
            nivel: nivel.value,
            interes: interes.value,
            date: new Date()
        };
        localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
        loadSaved();
        alert("Guardado correctamente.");
    };

    document.getElementById("exportBtn").onclick = () => {
        const raw = localStorage.getItem(STORAGE_KEY);
        if (!raw) return alert("No hay datos para exportar.");
        const blob = new Blob([raw], {type: "application/json"});
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "respuestas_IA.json";
        a.click();
        URL.revokeObjectURL(url);
    };

    loadSaved();
</script>

